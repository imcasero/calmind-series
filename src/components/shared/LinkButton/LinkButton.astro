---
import type { ImageMetadata } from "astro";

interface Props {
  text?: string;
  href?: string;
  variant?: "primary" | "secondary" | "blue" | "red" | "green" | "yellow";
  icon?: string | ImageMetadata;
  iconPosition?: "left" | "right" | "top" | "bottom";
  newTab?: boolean; // Nueva prop
}

const {
  text = "",
  href = "",
  variant = "primary",
  icon,
  iconPosition = "left",
  newTab = true,
} = Astro.props;
---

<a
  href={href}
  class={`link-button link-button--${variant} ${iconPosition ? `icon-${iconPosition}` : ""}`}
  rel={newTab ? "noopener noreferrer" : undefined}
  target={newTab ? "_blank" : undefined}
>
  {
    icon && iconPosition === "left" && (
      <img
        src={typeof icon === "string" ? icon : icon?.src}
        alt="iconography"
        class="icon"
        style={{ height: "1.5em" }}
      />
    )
  }

  <span>{text}</span>

  {
    icon && iconPosition === "right" && (
      <img
        src={typeof icon === "string" ? icon : icon?.src}
        alt="iconography"
        class="icon"
        style={{ height: "1.5em" }}
      />
    )
  }
</a>

<style>
  @reference "../../../styles/global.css";
  .link-button {
    display: inline-flex;
    gap: 0.5rem;
    justify-content: center;
    align-items: center;
    padding: 0.75rem 2rem;
    text-align: center;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 3px solid rgba(0, 0, 0, 0.3);
    box-shadow:
      inset -2px -2px 0px rgba(0, 0, 0, 0.2),
      inset 2px 2px 0px rgba(255, 255, 255, 0.2);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .link-button:hover {
    transform: translateY(-2px);
    box-shadow:
      0px 4px 8px rgba(0, 0, 0, 0.3),
      inset -2px -2px 0px rgba(0, 0, 0, 0.2),
      inset 2px 2px 0px rgba(255, 255, 255, 0.2);
  }

  .link-button:active {
    transform: translateY(0px);
    box-shadow:
      inset -2px -2px 0px rgba(0, 0, 0, 0.3),
      inset 2px 2px 0px rgba(255, 255, 255, 0.1);
  }

  .link-button--primary {
    @apply bg-[color:var(--color-jacksons-purple-600)];
    @apply text-white;
  }

  .link-button--secondary {
    @apply bg-[color:var(--color-snuff-600)];
    @apply text-white;
  }

  .link-button--blue {
    @apply bg-blue-600;
    @apply text-white;
  }

  .link-button--red {
    @apply bg-red-600;
    @apply text-white;
  }

  .link-button--green {
    @apply bg-green-600;
    @apply text-white;
  }

  .link-button--yellow {
    @apply bg-[color:var(--color-retro-gold-500)];
    @apply text-jacksons-purple-900;
  }

  .icon {
    height: 1em;
  }

  .icon-top,
  .icon-bottom {
    flex-direction: column;
  }
</style>
