---
import Navbar from "../components/Navbar.astro";
import CalmindSeriesLogo from "../assets/CalmindSeriesLogo.png";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={CalmindSeriesLogo.src} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <!-- Pixel Art Clouds Animation -->
    <div class="clouds-container">
      <div class="cloud cloud-1"></div>
      <div class="cloud cloud-2"></div>
      <div class="cloud cloud-3"></div>
      <div class="cloud cloud-4"></div>
    </div>

    <Navbar />
    <div class="max-w-4xl mx-auto px-4">
      <slot />
    </div>
  </body>

  <style is:global>
    :root {
      --color-jacksons-purple-300: #b9b7fb;
      --font-pokemon: 'Press Start 2P', system-ui, sans-serif;
    }
    html {
      font-family: system-ui, sans-serif;
      color: #fff;
      image-rendering: pixelated;
      image-rendering: -moz-crisp-edges;
      image-rendering: crisp-edges;
    }

    body {
      @apply flex flex-col items-center justify-start min-h-screen;
      /* Retro Nintendo Background - pixelated grid pattern */
      background-color: #2d2660;
      background-image:
        repeating-linear-gradient(0deg, rgba(255,255,255,0.03) 0px, transparent 1px, transparent 2px, rgba(255,255,255,0.03) 3px),
        repeating-linear-gradient(90deg, rgba(255,255,255,0.03) 0px, transparent 1px, transparent 2px, rgba(255,255,255,0.03) 3px),
        radial-gradient(circle at 20% 50%, rgba(107, 91, 208, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(247, 42, 155, 0.2) 0%, transparent 50%),
        linear-gradient(180deg, #1f1a45 0%, #2d2660 50%, #1f1a45 100%);
      background-attachment: fixed;
    }

    /* Clase para títulos estilo Pokémon */
    .pokemon-title {
      font-family: var(--font-pokemon);
      letter-spacing: 0.05em;
      text-shadow:
        3px 3px 0px rgba(0,0,0,0.5),
        -1px -1px 0px rgba(255,255,255,0.1);
    }

    /* Ajustes de tamaño para títulos con fuente Pokémon */
    h1.pokemon-title {
      line-height: 1.3;
    }

    /* Retro pixelated borders */
    .retro-border {
      border-style: solid;
      box-shadow:
        inset -2px -2px 0px rgba(0,0,0,0.3),
        inset 2px 2px 0px rgba(255,255,255,0.2);
    }

    /* Retro button effect - simplified */
    .retro-button {
      transition: all 0.2s ease;
    }

    .retro-button:hover {
      transform: translateY(-2px);
    }

    .retro-button:active {
      transform: translateY(0px);
    }

    /* Pokemon-style Pixel Art Clouds Animation */
    .clouds-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      pointer-events: none;
      z-index: 0;
    }

    .cloud {
      position: absolute;
      width: 12px;
      height: 12px;
      opacity: 0.4;
      animation-timing-function: linear;
      animation-iteration-count: infinite;
      transform: scale(1.5);
    }

    /* Pixel art cloud using box-shadow - larger version */
    .cloud::before {
      content: '';
      position: absolute;
      width: 12px;
      height: 12px;
      background: white;
      box-shadow:
        /* Row 1 */
        24px 0 0 white,
        36px 0 0 white,
        48px 0 0 white,
        /* Row 2 */
        12px 12px 0 white,
        24px 12px 0 white,
        36px 12px 0 white,
        48px 12px 0 white,
        60px 12px 0 white,
        72px 12px 0 white,
        /* Row 3 */
        0px 24px 0 white,
        12px 24px 0 white,
        24px 24px 0 white,
        36px 24px 0 white,
        48px 24px 0 white,
        60px 24px 0 white,
        72px 24px 0 white,
        84px 24px 0 white,
        /* Row 4 */
        12px 36px 0 white,
        24px 36px 0 white,
        36px 36px 0 white,
        48px 36px 0 white,
        60px 36px 0 white,
        72px 36px 0 white;
    }

    .cloud-1 {
      top: 10%;
      animation: float-cloud-left-to-right 60s linear infinite;
      animation-delay: 0s;
    }

    .cloud-2 {
      top: 30%;
      animation: float-cloud-right-to-left 80s linear infinite;
      animation-delay: -25s;
      opacity: 0.35;
    }

    .cloud-3 {
      top: 60%;
      animation: float-cloud-left-to-right 70s linear infinite;
      animation-delay: -45s;
      opacity: 0.3;
    }

    .cloud-4 {
      top: 80%;
      animation: float-cloud-right-to-left 90s linear infinite;
      animation-delay: -60s;
      opacity: 0.25;
    }

    @keyframes float-cloud-left-to-right {
      from {
        left: -200px;
      }
      to {
        left: 100%;
      }
    }

    @keyframes float-cloud-right-to-left {
      from {
        right: -200px;
      }
      to {
        right: 100%;
      }
    }

    /* Ensure content is above clouds */
    body > *:not(.clouds-container) {
      position: relative;
      z-index: 1;
    }
  </style>
</html>
