---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <Navbar />
    <div class="max-w-4xl mx-auto px-4">
      <slot />
    </div>
  </body>

  <style is:global>
    :root {
      --color-jacksons-purple-300: #b9b7fb;
    }
    html {
      font-family: system-ui, sans-serif;
      color: #fff;
    }

    body {
      @apply flex flex-col items-center justify-start min-h-screen;
      /* Unified background (gradient + dotted pattern) */
      background-image:
        radial-gradient(rgba(255,255,255,0.12) 1px, transparent 1px),
        linear-gradient(to bottom, var(--color-jacksons-purple-950), var(--color-jacksons-purple-800));
      background-size: 18px 18px, auto;
      background-attachment: fixed, fixed;
    }
  </style>
</html>
